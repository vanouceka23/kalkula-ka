<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Label Name="cislo" Grid.Row="0" Grid.ColumnSpan="4" Grid.Column="0" FontSize="40" HorizontalAlignment="Right">0</Label>
        <Button Grid.Column="0" Grid.Row="1" FontSize="20" Click="procenta" >%</Button>
        <Button Grid.Column="1" Grid.Row="1" FontSize="20" Click="CE">CE</Button>
        <Button Grid.Column="2" Grid.Row="1" FontSize="20" Click="C">C</Button>
        <Button Grid.Column="3" Grid.Row="1" FontSize="20" Click="V_Click" >⌫</Button>
        <Button Grid.Column="0" Grid.Row="2" FontSize="20" Click="jednaxtina_Click">1/X</Button>
        <Button Grid.Column="1" Grid.Row="2" FontSize="20" Click="nadruhou_Click">X^2</Button>
        <Button Grid.Column="2" Grid.Row="2" FontSize="20" Click="Button_Click">2√x</Button>
        <Button Grid.Column="3" Grid.Row="2" FontSize="20" Click="Button_Click_1">÷</Button>
        <Button Grid.Column="0" Grid.Row="3" FontSize="20" Click="Button_Click_2">7</Button>
        <Button Grid.Column="1" Grid.Row="3" FontSize="20" Click="Button_Click_3">8</Button>
        <Button Grid.Column="2" Grid.Row="3" FontSize="20" Click="Button_Click_4">9</Button>
        <Button Grid.Column="3" Grid.Row="3" FontSize="20" Click="Button_Click_5">×</Button>
        <Button Grid.Column="0" Grid.Row="4" FontSize="20" Click="Button_Click_6">4</Button>
        <Button Grid.Column="1" Grid.Row="4" FontSize="20" Click="Button_Click_7">5</Button>
        <Button Grid.Column="2" Grid.Row="4" FontSize="20" Click="Button_Click_8">6</Button>
        <Button Grid.Column="3" Grid.Row="4" FontSize="20" Click="Button_Click_9">-</Button>
        <Button Grid.Column="0" Grid.Row="5" FontSize="20" Click="Button_Click_10">1</Button>
        <Button Grid.Column="1" Grid.Row="5" FontSize="20" Click="Button_Click_11">2</Button>
        <Button Grid.Column="2" Grid.Row="5" FontSize="20" Click="Button_Click_12">3</Button>
        <Button Grid.Column="3" Grid.Row="5" FontSize="20" Click="Button_Click_13">+</Button>
        <Button Grid.Column="0" Grid.Row="6" FontSize="20" Click="Button_Click_14">+/-</Button>
        <Button Grid.Column="1" Grid.Row="6" FontSize="20" Click="Button_Click_15">0</Button>
        <Button Grid.Column="2" Grid.Row="6" FontSize="20" Click="Button_Click_16">,</Button>
        <Button Grid.Column="3" Grid.Row="6" FontSize="20" Click="Button_Click_17">=</Button>
    </Grid>
</Window>
